{
  "dashboard": {
    "title": "Business & Adoption Metrics",
    "uid": "business_metrics",
    "tags": ["business", "usage"],
    "schemaVersion": 39,
    "version": 2,
    "timezone": "browser",
    "editable": true,
    "refresh": "5m",
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["1m", "5m", "15m", "1h"],
      "time_options": ["7d", "14d", "30d", "90d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "label": "Prometheus",
          "query": "prometheus",
          "refresh": 1,
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "agent",
          "type": "query",
          "label": "Agent",
          "datasource": "$datasource",
          "definition": "label_values(ai_queries_total, agent_type)",
          "refresh": 2,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "language",
          "type": "query",
          "label": "Language",
          "datasource": "$datasource",
          "definition": "label_values(code_reviews_total, language)",
          "refresh": 2,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "type": "row",
        "title": "Активные клиенты",
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1}
      },
      {
        "type": "stat",
        "title": "Active Users",
        "id": 2,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 1, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "active_users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            }
          }
        }
      },
      {
        "type": "stat",
        "title": "Active Tenants",
        "id": 3,
        "datasource": "$datasource",
        "gridPos": {"x": 6, "y": 1, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "sum(active_tenants{status=\"active\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "green", "value": 5}
              ]
            }
          }
        }
      },
      {
        "type": "piechart",
        "title": "Tenants by Status",
        "id": 4,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 1, "w": 12, "h": 10},
        "targets": [
          {
            "expr": "sum(active_tenants) by (status)",
            "refId": "A"
          }
        ]
      },
      {
        "type": "row",
        "title": "Использование AI и автоматизации",
        "id": 5,
        "gridPos": {"x": 0, "y": 6, "w": 24, "h": 1}
      },
      {
        "type": "timeseries",
        "title": "AI Queries per Agent (rate)",
        "id": 6,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 7, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "reqps"}
        },
        "targets": [
          {
            "expr": "sum by (agent_type) (rate(ai_queries_total{agent_type=~\"$agent\"}[$__rate_interval]))",
            "legendFormat": "{{agent_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "AI Tokens Used (per hour)",
        "id": 7,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 7, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "short"}
        },
        "targets": [
          {
            "expr": "sum by (agent_type) (increase(ai_tokens_used_total{agent_type=~\"$agent\"}[1h]))",
            "legendFormat": "{{agent_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Code Reviews (per day)",
        "id": 8,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 15, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "short"}
        },
        "targets": [
          {
            "expr": "sum by (language) (increase(code_reviews_total{language=~\"$language\"}[1d]))",
            "legendFormat": "{{language}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Tests Generated (per day)",
        "id": 9,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 15, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "short"}
        },
        "targets": [
          {
            "expr": "sum by (language, framework) (increase(tests_generated_total{language=~\"$language\"}[1d]))",
            "legendFormat": "{{language}}/{{framework}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "row",
        "title": "Projects",
        "id": 10,
        "gridPos": {"x": 0, "y": 23, "w": 24, "h": 1}
      },
      {
        "type": "stat",
        "title": "Active Projects",
        "id": 11,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "sum(projects_total{status=\"active\"})",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Projects in Review",
        "id": 12,
        "datasource": "$datasource",
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "sum(projects_total{status=\"review\"})",
            "refId": "A"
          }
        ]
      },
      {
        "type": "piechart",
        "title": "Projects by Status",
        "id": 13,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 10},
        "targets": [
          {
            "expr": "sum(projects_total) by (status)",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
