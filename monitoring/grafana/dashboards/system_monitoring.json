{
  "dashboard": {
    "uid": "monitoring_system",
    "title": "Системный мониторинг",
    "schemaVersion": 39,
    "version": 2,
    "editable": true,
    "timezone": "browser",
    "refresh": "30s",
    "tags": ["monitoring", "prometheus"],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["15m", "1h", "6h", "12h", "24h", "7d", "30d"]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": false,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "$datasource",
          "enable": true,
          "expr": "ALERTS{alertname!=\"\"}",
          "iconColor": "red",
          "name": "Prometheus Alerts",
          "step": "60",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}: {{summary}}",
          "titleFormat": "{{alertname}}"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "label": "Prometheus",
          "query": "prometheus",
          "refresh": 1,
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "instance",
          "label": "Instance",
          "type": "query",
          "datasource": "$datasource",
          "definition": "label_values(up, instance)",
          "refresh": 2,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "job",
          "label": "Job",
          "type": "query",
          "datasource": "$datasource",
          "definition": "label_values(up{instance=~\"$instance\"}, job)",
          "refresh": 2,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "endpoint",
          "label": "Endpoint",
          "type": "query",
          "datasource": "$datasource",
          "definition": "label_values(http_requests_total{job=~\"$job\"}, endpoint)",
          "refresh": 2,
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "links": [
      {
        "title": "Prometheus UI",
        "type": "link",
        "url": "http://localhost:9090",
        "targetBlank": true,
        "includeVars": true
      },
      {
        "title": "Alertmanager",
        "type": "link",
        "url": "http://localhost:9093",
        "targetBlank": true,
        "includeVars": true
      }
    ],
    "panels": [
      {
        "type": "row",
        "title": "Общее состояние",
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1}
      },
      {
        "type": "stat",
        "title": "Активные таргеты",
        "id": 2,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(up{instance=~\"$instance\", job=~\"$job\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        }
      },
      {
        "type": "stat",
        "title": "Алерты (firing)",
        "id": 3,
        "datasource": "$datasource",
        "gridPos": {"x": 6, "y": 1, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "type": "stat",
        "title": "Последний deploy uptime",
        "id": 4,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 1, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 3600}
              ]
            }
          }
        },
        "targets": [
          {
            "expr": "max(time() - node_boot_time_seconds{instance=~\"$instance\", job=~\"$job\"})",
            "refId": "A"
          }
        ]
      },
      {
        "type": "table",
        "title": "Статус сервисов",
        "id": 5,
        "datasource": "$datasource",
        "gridPos": {"x": 18, "y": 1, "w": 6, "h": 8},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                }
              }
            ]
          }
        },
        "options": {"showHeader": true},
        "targets": [
          {
            "expr": "up{instance=~\"$instance\", job=~\"$job\"}",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "type": "row",
        "title": "Инфраструктура",
        "id": 6,
        "gridPos": {"x": 0, "y": 5, "w": 24, "h": 1}
      },
      {
        "type": "timeseries",
        "title": "CPU Usage",
        "id": 7,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "percent"}
        },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\", job=~\"$job\"}[$__rate_interval])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Memory Usage",
        "id": 8,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "percent"}
        },
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\", job=~\"$job\"} / node_memory_MemTotal_bytes{instance=~\"$instance\", job=~\"$job\"})) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Disk Usage",
        "id": 9,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "percent"}
        },
        "targets": [
          {
            "expr": "max by (instance, mountpoint) (100 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|aufs|overlay\", instance=~\"$instance\", job=~\"$job\"} * 100 / node_filesystem_size_bytes{fstype!~\"tmpfs|aufs|overlay\", instance=~\"$instance\", job=~\"$job\"}))",
            "legendFormat": "{{instance}} {{mountpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "System CPU (Agent)",
        "id": 10,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "percent"}
        },
        "targets": [
          {
            "expr": "system_cpu_usage_percent",
            "legendFormat": "system",
            "refId": "A"
          }
        ]
      },
      {
        "type": "row",
        "title": "HTTP и сервисные метрики",
        "id": 11,
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 1}
      },
      {
        "type": "timeseries",
        "title": "HTTP Requests per Second",
        "id": 12,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 23, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "reqps"}
        },
        "targets": [
          {
            "expr": "sum by (method) (rate(http_requests_total{job=~\"$job\", endpoint=~\"$endpoint\"}[$__rate_interval]))",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "HTTP 5xx rate",
        "id": 13,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 23, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "reqps"}
        },
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(http_requests_total{status_code=~\"5..\", job=~\"$job\", endpoint=~\"$endpoint\"}[$__rate_interval]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Request duration p95",
        "id": 14,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 31, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "s"}
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(http_request_duration_seconds_bucket{job=~\"$job\", endpoint=~\"$endpoint\"}[$__rate_interval])))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Request duration p50",
        "id": 15,
        "datasource": "$datasource",
        "gridPos": {"x": 12, "y": 31, "w": 12, "h": 8},
        "fieldConfig": {
          "defaults": {"unit": "s"}
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by (le, endpoint) (rate(http_request_duration_seconds_bucket{job=~\"$job\", endpoint=~\"$endpoint\"}[$__rate_interval])))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "row",
        "title": "Алерты",
        "id": 16,
        "gridPos": {"x": 0, "y": 39, "w": 24, "h": 1}
      },
      {
        "type": "table",
        "title": "Активные алерты",
        "id": 17,
        "datasource": "$datasource",
        "gridPos": {"x": 0, "y": 40, "w": 24, "h": 8},
        "options": {"showHeader": true},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}